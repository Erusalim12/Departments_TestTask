@model Domain.Models.Department

@{
    ViewBag.Title = "Добавление отдела";
}

<h3>Добавление отдела</h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="input-field col s6">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" }) 
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control validate", @type="text", @required = "required" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
     
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <a class="waves-effect waves-light btn" href="@Url.Action("Index","Departments")">  <i class="material-icons left">arrow_back</i>Назад</a>

            <button class="btn waves-effect waves-light" type="submit" name="action">
                Создать
                <i class="material-icons right">send</i>
            </button>

        </div>
    </div>


</div>
}



