@model Domain.Models.Department

@{
    ViewBag.Title = "Информация об отделе";
}
<div class="row">
    <div class="col s12 m8">
        <div class="card blue-grey darken-1 z-depth-4">
            <div class="card-content white-text">
                <span class="card-title"> Отдел: @Model.Name</span>                
                <p>Список отдела:</p>
                @Html.Action("_getEmployees", "Departments", new { depId = Model.Id })
            </div>
            <div class="card-action">
                <a class="waves-effect waves-light btn" href="@Url.Action("Index","Departments")">  <i class="material-icons left">arrow_back</i>Назад</a>
                <a class="waves-effect waves-light btn" href="@Url.Action("Edit","Departments",new {Id=Model.Id})">  <i class="material-icons left">edit</i>Редактировать</a>
                @if ((bool)ViewBag.IsEmpty)
                {
                    <a class="waves-effect waves-light btn" href="@Url.Action("Delete", "Departments", new { Id = Model.Id })">  <i class="material-icons left">delete</i>Удалить</a>
                }
            </div>
        </div>
    </div>
</div>
*Удалить отдел можно только после удаления/перемещения персонала